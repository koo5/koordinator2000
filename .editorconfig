root = true

[*]
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
charset = utf-8
trim_trailing_whitespace = true
ij_typescript_spaces_within_imports = true
ij_spaces_within_imports = true
ij_html_space_inside_empty_tag = true

[*.{js,jsx,ts,tsx}]
curly_spacing = always

